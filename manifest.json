{
    "manifest_version": 3,
    "name": "download station helper",
    "version": "1.1",
    "description": "handle tasks for download station",
    "permissions": [
        "storage",
        "alarms",
        "idle",
        "tabs"
    ],
    "host_permissions": [
        "http://*/webapi/*",
        "https://*/webapi/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/download_16.png",
        "48": "icons/download_48.png",
        "128": "icons/download_128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["lib/sweetalert2.all.min.js", "content.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "matches": ["<all_urls>"],
            "resources": ["lib/sweetalert2.all.min.js"]
        }
    ],
    "options_page": "options.html"
}